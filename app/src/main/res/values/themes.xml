<resources>
    <!-- Base application theme. -->
    <style name="Theme.AcademyHomework" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMainStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="helperText">@string/required</item>
        <item name="helperTextTextColor">@android:color/holo_red_dark</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="MyEditText" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
    </style>
</resources>
