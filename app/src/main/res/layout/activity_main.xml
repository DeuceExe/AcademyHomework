<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutName"
        style="@style/MyMainStyle"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_person">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:textColorHint="#757575" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutSurname"
        style="@style/MyMainStyle"
        app:layout_constraintEnd_toEndOf="@id/layoutName"
        app:layout_constraintStart_toStartOf="@id/layoutName"
        app:layout_constraintTop_toBottomOf="@id/layoutName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editSurname"
            style="@style/MyEditText"
            android:hint="@string/surname"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutAge"
        style="@style/MyMainStyle"
        app:counterEnabled="true"
        app:counterMaxLength="2"
        app:layout_constraintEnd_toEndOf="@id/layoutSurname"
        app:layout_constraintStart_toStartOf="@id/layoutSurname"
        app:layout_constraintTop_toBottomOf="@id/layoutSurname">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editAge"
            style="@style/MyEditText"
            android:hint="@string/age"
            android:inputType="number"
            android:maxLength="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutPhone"
        style="@style/MyMainStyle"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:layout_constraintEnd_toEndOf="@id/layoutAge"
        app:layout_constraintStart_toStartOf="@id/layoutAge"
        app:layout_constraintTop_toBottomOf="@id/layoutAge"
        app:prefixText="+"
        app:startIconDrawable="@android:drawable/stat_sys_phone_call">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPhone"
            style="@style/MyEditText"
            android:hint="@string/phone"
            android:inputType="phone"
            android:maxLength="12" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBirthday"
        style="@style/MyMainStyle"
        app:layout_constraintEnd_toEndOf="@id/layoutPhone"
        app:layout_constraintStart_toStartOf="@id/layoutPhone"
        app:layout_constraintTop_toBottomOf="@id/layoutPhone"
        app:startIconDrawable="@drawable/ic_birth">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editBirthday"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/birthday"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSetData"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:enabled="false"
        android:text="@string/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutBirthday" />

    <Button
        android:id="@+id/btnSecondActivity"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/next_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutBirthday"
        android:enabled="false" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSetData" />

</androidx.constraintlayout.widget.ConstraintLayout>